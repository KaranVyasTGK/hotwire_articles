<%= turbo_frame_tag article do %>
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p><br/>
  <% if action_name != "show" %>
    <%= button_to "Delete this article", article_path(article), method: :delete, data: { turbo_confirm: "Are you sure?"} %>
    <%= link_to "Show this article", article, data: {turbo_frame: "_top"} %>
    <%= link_to "Edit this article", edit_article_path(article) %>
  <% end %>
  <hr>

</div>
<% end %>